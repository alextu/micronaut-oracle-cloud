<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

     <logger name="io.micronaut.jdbc" level="debug" />
     <logger name="io.micronaut.configuration.jdbc" level="debug" />
     <logger name="io.micronaut.oraclecloud.atp" level="debug" />

</configuration>
